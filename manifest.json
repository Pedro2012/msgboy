{
  "name": "Growme",
  "version": "1.0",
  "description": "Grownme makes Chrome more useful and smarter!",
  "icons": { "24": "/views/icons/24.png", "128": "/views/icons/128.png" },
  "options_page": "/views/html/options.html",
  "app": {
    "launch": {
      "local_path": "/views/html/inbox.html"
    }
  },
  "permissions": [
      "notifications", 
      "tabs", 
      "background",
      "contextMenus",
      "unlimitedStorage",
      "http://superfeedr.com",
      "https://superfeedr.com",
      "http://www.google.com/",
      "https://www.google.com/"
  ],
  "content_scripts": [ {
    "js": [ 
      "/lib/date.format.js",
      "/lib/jquery/jquery-1.5.1.min.js",
      "/lib/jquery/jquery.event.drag-2.0.min.js",
      "/controllers/feed_sniffer.js",
      "/controllers/show_bookmark.js"],
    "css": [
      "/views/css/bookmark.css"],
    "matches": [ "http://*/*", "https://*/*" ],
    "run_at" : "document_end"
  } 
  ],
  "background_page": "/views/html/background.html"
}
